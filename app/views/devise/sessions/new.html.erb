<%= image_tag "team.svg", alt: "alttext" %>

<h2 class="h3 mb-3 fw-normal">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                :label => false,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", placeholder: "Email Address" } %>
    <%= f.input :password,
                :label => false,
                required: false,
                input_html: { autocomplete: "current-password", placeholder: "Password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, "Log in", class: "w-100 btn btn-lg btn-primary" %>
  </div>
<% end %>

